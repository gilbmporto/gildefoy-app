// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String     @id
  firstName String
  lastName  String
  email     String     @unique
  tours     UserTour[]
}

model Tour {
  id          String     @id @default(uuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  city        String
  country     String
  title       String
  description String     @db.Text
  image       String?
  stops       Json
  price       String
  style       String
  daytime     String
  users       UserTour[]

  @@unique([city, country, price, style, daytime])
}

model UserTour {
  userId    String
  tourId    String
  user      User     @relation(fields: [userId], references: [id])
  tour      Tour     @relation(fields: [tourId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([userId, tourId])
  @@index([userId])
  @@index([tourId])
}
